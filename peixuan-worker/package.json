{
	"name": "peixuan-worker",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"build": "esbuild src/index.ts --bundle --format=esm --outfile=dist/index.js --platform=neutral --conditions=workerd,worker --external:cloudflare:* --external:@cloudflare/kv-asset-handler",
		"deploy:staging": "npm run build && wrangler deploy --env staging",
		"deploy:production": "npm run build && wrangler deploy --env production",
		"test": "vitest run",
		"test:integration": "vitest run test/integration",
		"test:unit": "vitest run test --exclude 'test/integration/**'",
		"lint": "eslint . --fix",
		"db:generate": "drizzle-kit generate",
		"db:migrate:staging": "wrangler d1 migrations apply peixuan-db-staging --env staging",
		"db:migrate:production": "wrangler d1 migrations apply peixuan-db --env production"
	},
	"devDependencies": {
		"@cloudflare/vitest-pool-workers": "^0.8.19",
		"@cloudflare/workers-types": "^4.20251216.0",
		"@eslint/js": "^9.17.0",
		"@typescript-eslint/eslint-plugin": "^8.18.2",
		"@typescript-eslint/parser": "^8.18.2",
		"esbuild": "^0.27.2",
		"eslint": "^9.17.0",
		"typescript": "^5.5.2",
		"vitest": "~3.2.0",
		"wrangler": "^4.51.0"
	},
	"dependencies": {
		"@cloudflare/kv-asset-handler": "^0.4.1",
		"date-fns": "^4.1.0",
		"drizzle-kit": "^0.18.1",
		"drizzle-orm": "^0.44.7",
		"drizzle-zod": "^0.8.3",
		"itty-router": "^5.0.22",
		"lunar-typescript": "~1.8.6",
		"uuid": "^13.0.0",
		"zod": "^4.1.13"
	}
}
